@model IEnumerable<Campeonato.Models.Equipe>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-center flex-column mb-5">
    <h2 class="text-center mb-3">Equipes</h2>
    <hr />
    <a class="btn btn-light mx-auto" asp-action="Create">Adicionar</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Grupo (se existente)
            </th>
            <th>
                Torneio
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeEquipe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdGrupo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTorneioNavigation.IdTorneio)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEquipe">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdEquipe">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdEquipe">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

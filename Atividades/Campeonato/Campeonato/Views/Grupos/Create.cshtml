@model Campeonato.Models.Grupo

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Novo Grupo</h1>
<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="NomeGrupo" class="control-label">Nome</label>
                <input asp-for="NomeGrupo" class="form-control" />
                <span asp-validation-for="NomeGrupo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="IdFase" class="control-label">Fase</label>
                <select asp-for="IdFase" class ="form-control" asp-items="ViewBag.IdFase"></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="IdTorneio" class="control-label">Torneio</label>
                <select asp-for="IdTorneio" class ="form-control" asp-items="ViewBag.IdTorneio"></select>
            </div>
            <div class="form-group d-flex">
                <input type="submit" value="Adicionar" class="btn btn-primary  w-100" />
                <a class="btn btn-light" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

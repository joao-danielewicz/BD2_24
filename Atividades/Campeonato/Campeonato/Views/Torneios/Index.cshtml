@model IEnumerable<Campeonato.Models.Torneio>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-center flex-column mb-5">
    <h2 class="text-center mb-3">Torneios</h2>
    <hr />
    <a class="btn btn-light mx-auto" asp-action="Create">Adicionar</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Data de abertura
            </th>
            <th>
                Data de encerramento
            </th>
            <th>
                Esporte
            </th>
            <th>
                Tipo de competição
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeTorneio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataFim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdModalidadeNavigation.IdModalidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoTorneioNavigation.IdTipoTorneio)
            </td>
            <td>
                <a class="btn btn-primary py-1 me-2" asp-action="Edit" asp-route-id="@item.IdTorneio">Editar</a> 
                    <a class="btn btn-primary py-1 me-2" asp-action="Details" asp-route-id="@item.IdTorneio">Detalhes</a>
                    <a class="btn btn-primary py-1 me-2" asp-action="Delete" asp-route-id="@item.IdTorneio">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
